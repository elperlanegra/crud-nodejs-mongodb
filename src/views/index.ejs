<%- include('partials/_header') %>






    <div class="container ">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="row mb-3">
                                <input type="text" name="title" class="form-control" placeholder="Insert a Title">
                            </div>
                            <div class="row mb-3">
                                <textarea name="description" cols="80" class="form-control"
                                    placeholder="insert a description"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="col-md-7">
                <table class="table table-border table-hover">

                    <thead>
                        <th>No</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </thead>

                    <tbody>
                        <% for(var i=0; i < tasks.length; i++) { %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= tasks[i].title %>
                                </td>
                                <td>
                                    <%= tasks[i].description %>
                                </td>
                                <td>
                                    <a href="/turn/<%= tasks[i]._id %>"
                                        class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Done</a>
                                    <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Edit</a>
                                    <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

    <%- include('partials/_footer') %>